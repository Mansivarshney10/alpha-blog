<h3 class="text-center mt-4">Categories</h3>

<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
    <div class="row justify-content-md-center">

        <% @categories.each do |category| %>
        <div class="col-sm-6 mt-4">
            <div class="card text-center shadow p-1 mb-5 bg-body rounded">
            <div class="card-body">
                <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
                <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            </div>
            <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
                edited <%= time_ago_in_words(category.updated_at) %> </small>
            </div>
            </div>
        </div>
        <% end %>

    </div>
</div>

<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>