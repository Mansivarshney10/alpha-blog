<h3 class="text-center mt-4">Create a new category</h3>
<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>

                <div class="form-group row mt-3"> 
                    <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center mt-4"> 
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>

        <div class="mb-3">
            <p><%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "d-flex justify-content-center mt-4 text-success" %></p>
        </div>

    </div>

</div>