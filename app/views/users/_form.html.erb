<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>

                <div class="form-group row mt-3"> 
                    <%= f.label :username, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                    </div>
                </div>

                <div class="form-group row mt-3"> 
                    <%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>

                <div class="form-group row mt-3"> 
                    <%= f.label :password, class: "col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "choose a password" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center mt-4"> 
                    <%= f.submit class: "btn btn-outline-light btn-lg"%>
                </div>

            <% end %>
        </div>

        <p><%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "d-flex justify-content-center mt-4 text-success" %></p>
    </div>

</div>