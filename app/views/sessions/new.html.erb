<h3 class="text-center mt-4">Login for Alpha Blog</h3>

<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>

                <div class="form-group row mt-3"> 
                    <%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>

                <div class="form-group row mt-3"> 
                    <%= f.label :password, class: "col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center mt-4"> 
                    <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>

        <p><%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "d-flex justify-content-center mt-4 text-success" %></p>
    </div>

</div>