<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>

                <div class="form-group row mt-3"> 
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row mt-3"> 
                    <%= f.label :description, class: "col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center mt-4"> 
                    <%= f.submit class: "btn btn-outline-light btn-lg"%>
                </div>

            <% end %>
        </div>

        <p><%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "d-flex justify-content-center mt-4 text-success" %></p>
    </div>

</div>