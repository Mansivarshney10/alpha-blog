<div class="container">
    <% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
    <% end %>

    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(model: @article, local: true) do |f| %>

                <div class="form-group row mt-3"> 
                    <%= f.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row mt-3"> 
                    <%= f.label :description, class: "col-2 col-form-label" %><br/>
                    <div class="col-10">
                        <%= f.text_area :description, rows:10, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center mt-4"> 
                    <%= f.submit class: "btn btn-outline-light btn-lg"%>
                </div>

            <% end %>
        </div>

        <p><%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "d-flex justify-content-center mt-4" %></p>
    </div>
</div>